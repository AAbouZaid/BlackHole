<VirtualHost *:8080>
    WSGIScriptAlias / /opt/BlackHole/apache/django.wsgi
    Alias /blackhole/static /opt/BlackHole/black_hole_db/static
    <Directory "/home/BlackHole/black_hole_db/static">
        Order allow,deny
        Options Indexes
        Allow from all
        IndexOptions FancyIndexing
    </Directory>
    <Directory "/opt/BlackHole/apache/">
        Allow from all
    </Directory>
</VirtualHost>
